<head>
  <meta charset="utf-8">
  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>Wordlick</title>
  <meta name="description" content="hangman solver">
  <meta name="author" content="Diego E. Salazar">
  <!-- Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Place favicon.ico & apple-touch-icon.png in the root of your domain and delete these references -->
  <link rel="shortcut icon" href="/images/favicon.ico">
  <link rel="apple-touch-icon" href="/images/apple-touch-icon.png">

  <!-- CSS: implied media="all" -->
  <link rel="stylesheet" href="/stylesheets/style.css">
	<link rel="stylesheet" href="/stylesheets/application.css?v=6">

  <!-- Uncomment if you are specifically targeting less enabled mobile browsers
  <link rel="stylesheet" media="handheld" href="/css/handheld.css?v=2">  -->

  <!-- All JavaScript at the bottom, except for Modernizr which enables HTML5 elements & feature detects -->
  <script src="/javascripts/modernizr-1.7.min.js"></script>
</head>
<body>
	
	<header>
		<h1>Wordlick</h1>
  </header>
	
  <div id="container" role="main">
		<ul id="tab_toggle">
			<li><a href="#solve" class="<%= 'active' unless params.has_key?('letters') %>">Solve</a></li>
			<li><a href="#build" class="<%= 'active' if params.has_key?('letters') %>">Build</a></li>
		</ul>
		
		<div id="solve" class="tab">
			<form action="/solve" method="get">
				<fieldset>
					<legend>Enter a Word<br /><span class="note">use - for unknown letters</span></legend>
					<input name="find" type="text" maxlength="8" value="<%= @find %>" />
				</fieldset>

				<fieldset>
					<legend>Exceptional letters<br /><span class="note">letters that have already been used</span></legend>
					<input name="except" type="text" value="<%= @except %>" />
				</fieldset>

				<fieldset>
					<input value="Lick That Word!" type="submit" />
				</fieldset>
			</form>
		</div>
		
		<div id="build" class="tab">
			<form action="/build" method="get">
				<fieldset>
					<legend>Enter a set of 12 letters</legend><br />
					<input name="letters" maxlength="12" type="text" value="<%= @letters %>" />
				</fieldset>

				<fieldset>
					<input value="Build Me Words!" type="submit" />
				</fieldset>
			</form>
		</div>
		
		<% if @results %>
			<%= erb :debug if @debug %>

			<% if @results.size == 1 %>
				<p id="solved">The solush is <strong><%= @results.first %>!</strong></p>
			<% else %>
				<div id="results">
					<p><%= @results.size %> results for <%= @find || @letters %></p>

					<ol>
						<%= @results.map { |r| "<li>#{r.is_a?(Array) ? r.join(', ') : r}</li>" }.join "\n" %>
					</ol>
				</div>
			<% end %>
		<% end %>
  </div> <!--! end of #container -->

	<footer>
		(4fun) Diego Salazar
  </footer>

  <!-- JavaScript at the bottom for fast page loading -->

  <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if necessary -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js"></script>
  <script>window.jQuery || document.write("<script src='js/libs/jquery-1.5.1.min.js'>\x3C/script>")</script>

  <!-- scripts concatenated and minified via ant build script-->
  <script src="/javascripts/plugins.js"></script>
  <script src="/javascripts/script.js"></script>
  <!-- end scripts-->


  <!--[if lt IE 7 ]>
